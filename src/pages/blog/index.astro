---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import Section from '../../components/Section.astro';
import EmptyState from '../../components/EmptyState.astro';
import { supabase, type BlogPost } from '../../lib/supabase';

const { data: posts, error } = await supabase
  .from('blog_posts')
  .select('*')
  .order('published_at', { ascending: false });

const blogPosts: BlogPost[] = posts || [];
---

<BaseLayout title="Blog - Tech Blog" description="技術メモ、スキルアップの記録、外部プラットフォーム記事">
  <Hero
    title="Blog"
    description="技術メモ、スキルアップの記録、Zenn/Qiita記事"
    variant="blog"
  />

  <Section maxWidth="900px">
    {blogPosts.length === 0 ? (
      <EmptyState message="まだ記事が投稿されていません" />
    ) : (
      <div class="posts-grid">
        {blogPosts.map((post) => (
          <article class="post-card">
            <div class="post-meta">
              <span class="post-platform">{post.platform}</span>
              <time class="post-date">
                {new Date(post.published_at).toLocaleDateString('ja-JP', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            </div>
            <h2 class="post-title">
              {post.external_url ? (
                <a href={post.external_url} target="_blank" rel="noopener noreferrer">
                  {post.title}
                </a>
              ) : (
                <a href={`/blog/${post.slug}`}>
                  {post.title}
                </a>
              )}
            </h2>
            <p class="post-description">{post.description}</p>
            {post.tags.length > 0 && (
              <div class="post-tags">
                {post.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>
    )}
  </Section>
</BaseLayout>

<style>
  .posts-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .post-card {
    background: white;
    border: 2px solid #95c7ec;
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .post-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(149, 199, 236, 0.3);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .post-platform {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: rgba(149, 199, 236, 0.2);
    color: #95c7ec;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
  }

  .post-date {
    color: #999;
    font-size: 0.875rem;
  }

  .post-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    line-height: 1.4;
  }

  .post-title a {
    color: #333;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .post-title a:hover {
    color: #95c7ec;
  }

  .post-description {
    font-size: 1rem;
    line-height: 1.6;
    color: #666;
    margin: 0 0 1rem 0;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: #efefef;
    color: #666;
    border-radius: 4px;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .posts-grid {
      gap: 1.5rem;
    }

    .post-card {
      padding: 1.5rem;
    }

    .post-title {
      font-size: 1.25rem;
    }

    .post-description {
      font-size: 0.9375rem;
    }
  }
</style>
