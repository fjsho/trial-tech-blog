---
import type { Gadget } from '../lib/supabase';

interface Props {
  gadget: Gadget;
}

const { gadget } = Astro.props;
---

<article class="gadget-card" data-category={gadget.category}>
  {gadget.image_url && (
    <div class="gadget-image">
      <img src={gadget.image_url} alt={gadget.name} loading="lazy" />
    </div>
  )}
  <div class="gadget-content">
    <div class="gadget-header">
      <h2 class="gadget-title">{gadget.name}</h2>
      <span class="gadget-category">{gadget.category}</span>
    </div>
    <p class="gadget-description">{gadget.description}</p>
    {gadget.tags.length > 0 && (
      <div class="gadget-tags">
        {gadget.tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )}
    <div class="gadget-links">
      {gadget.review_url && (
        <a href={gadget.review_url} class="link-btn review">レビュー記事</a>
      )}
      {gadget.amazon_url && (
        <a href={gadget.amazon_url} target="_blank" rel="noopener noreferrer" class="link-btn amazon">Amazonで見る</a>
      )}
    </div>
  </div>
</article>

<style>
  .gadget-card {
    background: white;
    border: 2px solid #7dc2bb;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .gadget-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(125, 194, 187, 0.3);
  }

  .gadget-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .gadget-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gadget-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex: 1;
  }

  .gadget-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
  }

  .gadget-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
    color: #333;
    flex: 1;
  }

  .gadget-category {
    padding: 0.25rem 0.75rem;
    background-color: rgba(125, 194, 187, 0.2);
    color: #7dc2bb;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    white-space: nowrap;
  }

  .gadget-description {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: #666;
    margin: 0;
  }

  .gadget-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: #efefef;
    color: #666;
    border-radius: 4px;
    font-size: 0.8125rem;
  }

  .gadget-links {
    display: flex;
    gap: 0.75rem;
    margin-top: auto;
    flex-wrap: wrap;
  }

  .link-btn {
    display: inline-block;
    padding: 0.625rem 1.25rem;
    border-radius: 6px;
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: all 0.2s ease;
    text-align: center;
  }

  .link-btn.review {
    background-color: #7dc2bb;
    color: white;
  }

  .link-btn.review:hover {
    background-color: #6bb0a9;
  }

  .link-btn.amazon {
    background-color: #ff9900;
    color: white;
  }

  .link-btn.amazon:hover {
    background-color: #e68a00;
  }
</style>
