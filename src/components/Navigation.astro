---
interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;
---

<nav class="nav">
	<a href="/about" class={currentPath === '/about' ? 'active' : ''}>About</a>
	<a href="/blog" class={currentPath.startsWith('/blog') ? 'active' : ''}>Blog</a>
	<a href="/gadget" class={currentPath.startsWith('/gadget') ? 'active' : ''}>Gadget</a>
	<a href="/books" class={currentPath.startsWith('/books') ? 'active' : ''}>Books</a>
</nav>

<style>
	.nav {
		display: flex;
		gap: 1.5rem;
		flex: 1;
		justify-content: center;
	}

	.nav a {
		color: #666;
		text-decoration: none;
		font-weight: 500;
		padding: 0.5rem 0;
		border-bottom: 2px solid transparent;
		transition: all 0.2s ease;
	}

	.nav a:hover {
		color: #95c7ec;
	}

	.nav a.active {
		color: #95c7ec;
		border-bottom-color: #95c7ec;
	}

	@media (max-width: 768px) {
		.nav {
			order: 3;
			flex-basis: 100%;
			gap: 1rem;
			justify-content: flex-start;
			overflow-x: auto;
			-webkit-overflow-scrolling: touch;
			padding-bottom: 0.5rem;
		}

		.nav a {
			white-space: nowrap;
			font-size: 0.875rem;
		}
	}
</style>
