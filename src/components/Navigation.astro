---
interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;
---

<nav class="nav">
	<a href="/about" class={currentPath === '/about' ? 'active' : ''}>About</a>
	<a href="/blog" class={currentPath.startsWith('/blog') ? 'active' : ''}>Blog</a>
	<a href="/gadget" class={currentPath.startsWith('/gadget') ? 'active' : ''}>Gadget</a>
	<a href="/book" class={currentPath.startsWith('/book') ? 'active' : ''}>Book</a>
</nav>

<style>
	.nav {
		display: flex;
		gap: var(--spacing-md);
		flex: 1;
		justify-content: center;
	}

	.nav a {
		color: var(--color-text-secondary);
		text-decoration: none;
		font-weight: var(--font-weight-medium);
		padding: var(--spacing-xs) 0;
		border-bottom: 2px solid transparent;
		transition: all var(--transition-fast);
	}

	.nav a:hover {
		color: var(--color-primary);
	}

	.nav a.active {
		color: var(--color-primary);
		border-bottom-color: var(--color-primary);
	}

	@media (max-width: 768px) {
		.nav {
			order: 3;
			flex-basis: 100%;
			gap: var(--spacing-sm);
			justify-content: flex-start;
			overflow-x: auto;
			-webkit-overflow-scrolling: touch;
			padding-bottom: var(--spacing-xs);
		}

		.nav a {
			white-space: nowrap;
			font-size: var(--font-size-sm);
		}
	}
</style>
