---
interface Props {
  title: string;
  description?: string;
  variant?: 'home' | 'about' | 'blog' | 'gadget' | 'book';
}

const { title, description, variant = 'home' } = Astro.props;

const gradientMap = {
  home: 'linear-gradient(135deg, #3a2782 0%, #009dc8 100%)',
  about: 'linear-gradient(135deg, #009dc8 0%, #95c7ec 100%)',
  blog: 'linear-gradient(135deg, #95c7ec 0%, #7dc2bb 100%)',
  gadget: 'linear-gradient(135deg, #7dc2bb 0%, #f9d77f 100%)',
  book: 'linear-gradient(135deg, #f9d77f 0%, #ec6d81 100%)',
};

const gradient = gradientMap[variant];
---

<div class="hero" style={`background: ${gradient};`}>
	<div class="hero-container">
		<h1 class="hero-title">{title}</h1>
		{description && <p class="hero-description" set:html={description} />}
	</div>
</div>

<style>
	.hero {
		color: white;
		text-align: center;
		padding: calc(var(--spacing-xl) * 0.75) var(--spacing-md);
	}

	.hero-container {
		max-width: 800px;
		margin: 0 auto;
	}

	.hero-title {
		font-weight: var(--font-weight-bold);
		margin: 0 0 var(--spacing-xs) 0;
		line-height: 1.2;
		font-size: 2.5rem;
	}

	.hero-description {
		font-size: 1.125rem;
		line-height: 1.8;
		margin: 0;
		opacity: 0.95;
	}

	@media (max-width: 768px) {
		.hero {
			padding: var(--spacing-lg) var(--spacing-sm);
		}

		.hero-title {
			font-size: 2rem;
		}

		.hero-description {
			font-size: 1rem;
		}
	}
</style>
